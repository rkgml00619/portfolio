<%- include("../header", {jsFiles: ["join/join.js"]}) %>

    <div id="join" class="join">
        <div class="topSection">
            <div class="overlay"></div>
            <div class="center">
                <div class="topTitWrap">
                    <h2 class="topTit">회원가입</h2>
                    <p class="topSubTit">Korea Tourism Organization Join Membership</p>
                </div>
            </div>
        </div>
        <div class="contentsWrap">
            <div class="center">
                <div class="contTitleWrap">
                    <h2 class="contsTitle">회원가입</h2>
                    <p class="contSubTitle">한국관광공사의 다양한 서비스를 위해 회원가입을 진행해주세요.</p>
                </div>

                <div class="contsWrap">
                    <div class="contsDetail">
                        <div class="content1">
                            <form id="userForm" action="/joinData" method="post">
                                <div class="formWrap">
                                    <div class="memberId">
                                        <div class="inputWrap">
                                            <label for="memberId">아이디</label>
                                            <input id="memberId" name="memberId" type="text" placeholder="아이디를 입력해주세요." >
                                        </div>
                                        <span class="message">5자리 이상 영문 + 숫자조합</span>
                                    </div>
                                    <div class="memberPass">
                                        <div class="inputWrap">
                                            <label for="memberPass">비밀번호</label>
                                            <input id="memberPass" name="memberPass" type="password" placeholder="비밀번호를 입력해주세요." >
                                        </div>
                                        <span class="message">특수기호 (@, $, !)를 포함한 5자리 이상 영문 + 숫자조합</span>
                                    </div>
                                    <div class="passCheck">
                                        <div class="inputWrap">
                                            <label for="passCheck">비밀번호 확인</label>
                                            <input id="passCheck" name="passCheck" type="password" placeholder="비밀번호를 입력해주세요." >
                                        </div>
                                        <span class="message"></span>
                                    </div>
                                    <div class="name">
                                        <div class="inputWrap">
                                            <label for="name">이름</label>
                                            <input id="name" name="name" type="text" placeholder="이름을 입력해주세요." >
                                        </div>
                                        <span class="message"></span>
                                    </div>
                                    <div class="phone">
                                        <div class="inputWrap">
                                            <label for="phone">전화번호</label>
                                            <input id="phone" name="phone" type="text" placeholder="전화번호를 입력해주세요." >
                                        </div>
                                        <span class="message"></span>
                                    </div>
                                    <div class="email">
                                        <div class="inputWrap">
                                            <label for="email">이메일</label>
                                            <input id="email" name="email" type="email" placeholder="이메일을 입력해주세요." >
                                        </div>
                                        <span class="message"></span>
                                    </div>
                                    <div class="agreement">
                                        <label for="agreement" class="agreement">이용약관</label>

                                        <div class="agreementWrap">
                                            <div class="agreementConts">
                                                <%- include("agreement.ejs") %>
                                            </div>
                                            <div class="agreeCheck">
                                                <input type="checkbox" name="agree" id="agree" >
                                                <label for="agree">이용약관에 동의합니다.</label>
                                                <span class="message">필수 체크입니다.</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="boardBtns">
                                    <button class="cancelBtn" type="reset">취소</button>
                                    <button class="submitBtn" type="submit">등록</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include("../footer") %>  