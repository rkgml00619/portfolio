<%- include("../header", {jsFiles: [""]}) %>

    <div id="press_edit" class="press">
        <div class="topSection">
            <div class="overlay"></div>
            <div class="center">
                <div class="topTitWrap">
                    <h2 class="topTit">보도자료</h2>
                    <p class="topSubTit">Korea Tourism Organization Press Release</p>
                </div>
            </div>
        </div>
        <div class="contentsWrap">
            <div class="center">
                <ul class="location">
                    <li><a href="#">Home</a></li>
                    <li class="locaArrow"><span  class="material-symbols-outlined">
                        navigate_next</span></li>
                    <li>
                        <a href="#">알림마당</a>
                    </li>
                    <li class="locaArrow"><span  class="material-symbols-outlined">
                        navigate_next</span></li>
                    <li>
                        <a href="#">보도자료</a>
                    </li>
                </ul>
                <div class="contTitleWrap">
                    <h2 class="contsTitle">보도자료</h2>
                    <p class="contSubTitle">한국관광공사와 관련된 보도자료들을 확인해보세요.</p>
                </div>

                <div class="contsWrap">
                    <div class="contsDetail">
                        <div class="content1">
                            <div class="boardConts">
                                <form action="/pressData" method="post" enctype="multipart/form-data">
                                    <div class="formWrap">
                                        <div class="department">
                                            <label for="department">담당부서</label>
                                            <select name="department" id="department">
                                                <option value="지역홍보팀">지역홍보팀</option>
                                                <option value="관리감독팀">관리감독팀</option>
                                                <option value="마케팅팀">마케팅팀</option>
                                            </select>
                                        </div>
                                        <div class="writer">
                                            <label for="writer">작성자</label>
                                            <% if (login) { %>
                                                <input id="writer" name="writer" type="text" value="<%-login.name%>">
                                            <% } else { %>
                                                <input id="writer" name="writer" type="text" value="관리자">
                                            <% } %>
                                        </div>
                                        <div class="writeDate">
                                            <label for="writeDate">작성일</label>
                                            <input id="writeDate" name="writeDate" type="date">
                                        </div>
                                        <div class="thumbImg">
                                            <label for="thumbImg">썸네일</label>
                                            <input id="thumbImg" name="thumbImg" type="file">
                                        </div>
                                        <div class="detailImg">
                                            <label for="detailImg">상세 이미지</label>
                                            <input id="detailImg" name="detailImg" type="file" multiple>
                                        </div>
                                        <div class="title">
                                            <label for="title">제목</label>
                                            <input id="title" name="title" type="text" placeholder="제목을 입력하세요">
                                        </div>
                                        <div class="textArea">
                                            <label for="textArea">내용</label>
                                            <textarea name="textArea" id="textArea"></textarea>
                                        </div>
                                    </div>

                                    <div class="boardBtns">
                                        <div class="editBtns">
                                            <button class="cancelBtn" type="reset">취소</button>
                                            <button class="submitBtn" type="submit">등록</button>
                                        </div>
                                    </div>
                                </form>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include("../footer") %>  